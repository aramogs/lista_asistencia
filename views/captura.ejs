    <form  action="/captura2" method="POST">
     


            <%
            const date = new Date(); 
            const year = date.getFullYear();
            const month = date.toLocaleString('en-us', { month: 'long' });
            const yearMinus = year - 5;
            %>

           
            <div class="form-group col-lg-6">
