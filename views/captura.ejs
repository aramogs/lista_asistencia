                        <% for (let i = yearMinus ;i <= year; i++){%>
                            <option><%=i%></h1>
                        <% } %>
                    </select>
                </div>
            <div class="form-group col-lg-6">
                    <label for="cap_mes">Mes</label>
                    <select class="form-control" id="cap_mes" name="cap_mes" required>
                        <!-- Value igual a id_departamento de la base de datos otplus tabla departamento -->
