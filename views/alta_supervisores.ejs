<% include ./static/header %>
<% include ./static/sidebar %>
<% include ./static/navbar %>

<div class="col-md-6 col-lg-10-2">

    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Alta Supervisores</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="/alta_supervisor" method="POST">
            <div class="box-body">

                <div class="form-group">
                    <label for="empleado">Numero de empleado:</label>
                    <select class="form-control" name="emp_id" id="emp_id">
                        <% for (let i = 0; i < data2.length; i++) { %>
                        <option><%= data2[i].emp_id %></option>
                        <% } %>
                    </select>
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>


        </form>
    </div>
</div>
</div>
<div class="col-md-10 col-lg-10 col-xl-11">
    <div class="box-header">
        <h4 class="box-title mt-5">Accesos Actuales</h4>
    </div>

    <div class="table table-responsive mb-3" id="table">
        <table id="myTable2" class="table table-bordered table-striped">
            <thead class="thead-dark">
                <th>Eliminar</th>
                <th>Gaffete</th>
                <th>Nombre</th>

            </thead>
            <tbody>

                <%if(data3) { %>
                <% for (let i = 0; i < data3.length; i++) { %>
                <tr class="table_roww">
                    <td class="text-center " width='10%'>
                        <form method="POST">
                            <button name="correo" type="submit" formaction="/borrar_supervisor"
                                class="btn btn-danger text-center">Eliminar</button>
                            <input type="text" name="gafete" value="<%=data3[i].acc_id%>" hidden>
                        </form>
                    </td>

                    <td width='10%'><%= data3[i].acc_id%></td>

                    <% for (let y = 0; y < data2.length; y++) { %>
                        <% if (data2[y].emp_id == data3[i].acc_id) { %>
                            <td width='30%'><%= data2[y].emp_nombre%></td>
                        <% } %>
                        <% } %>

                </tr>
                <% } %>
                <% } %>
            </tbody>
        </table>

    </div>

    <% include ./static/footer %>
    </body>

    </html>